<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.moov.moov">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.PostActivity" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.OtherUserProfile"
            android:label="@string/title_activity_other_user_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".archived.FindUserActivity"
            android:label="@string/title_activity_find_user"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FeedActivity"
            android:label="@string/title_activity_feed"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MovieSearchResultsActivity"
            android:label="@string/title_activity_movie_search_results"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ChooseMovieActivity"
            android:label="@string/title_activity_choose_movie"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.SearchUserActivity"
            android:label="SearchUserActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.EditPostActivity"
            android:label="@string/title_activity_edit_post"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.MovieProfile"
            android:label="MovieProfile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.UserSettingsActivity"
            android:label="@string/title_activity_user_settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:label="@string/title_activity_change_password"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_main</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/bg_main</item>
        <item name="android:statusBarColor">@color/status_color</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>

        <item name="android:actionMenuTextColor">@color/darker_text_color</item>

        <item name="android:textViewStyle">@style/FuturaTextViewStyle</item>
        <item name="android:buttonStyle">@style/FuturaButtonStyle</item>

        <item name="logo">@drawable/logo_trimmed</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:textColorPrimary">@color/darker_text_color</item>
    </style>

    <style name="FuturaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>

    <style name="FuturaButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>


    <style name="ActionButtonStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:actionMenuTextColor">@color/darker_text_color</item>
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>

</resources>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_main</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/bg_main</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="logo">@drawable/logo_trimmed</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:actionMenuTextColor">@color/darker_text_color</item>
    </style>

    <style name="FuturaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">futura_medium_bt</item>
    </style>


    <style name="ActionButtonStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
